<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:id="@+id/ll_classify"
    android:orientation="vertical">


    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_classify"
                android:text="精选分类"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_inner_classify"
                android:layout_below="@+id/tv_classify"
                android:text="精选冻品，秒到就是赚到"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#E7E7E7"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="5dp"/>-->
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/imselectionOne_outside"
        android:layout_marginRight="@dimen/imselectionOne_outside"
        android:layout_marginTop="@dimen/imselectionOne_outside">

        <ImageView
            android:id="@+id/iv1"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="180dp"
            android:layout_height="148dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="180dp"
            android:layout_height="148dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="@dimen/imselectionOne_outside"
        android:layout_marginRight="@dimen/imselectionOne_outside"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/imselectionOne_outBottomside"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv3"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"

            android:layout_height="134dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv4"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"

            android:layout_height="134dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv5"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"
            android:layout_height="134dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="85dp"
            android:layout_height="134dp"
            android:scaleType="fitXY"
            />


    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#E7E7E7"-->
        <!--android:layout_height="1dp"/>-->
</LinearLayout>