<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <com.puyue.www.qiaoge.view.CompatToolbar
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/app_border_bottom_bg">

        <ImageView
            android:id="@+id/iv_with_draw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:text="提现"
            android:textColor="@color/app_top_bar_text"
            android:textSize="18dp" />
    </com.puyue.www.qiaoge.view.CompatToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="提现金额"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_activity_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/app_color_white"
                        android:hint="请输入金额"
                        android:inputType="number"
                        android:textColorHint="#D5D5D5"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_activity_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/app_color_white"
                        android:hint="请输入姓名"
                        android:textColorHint="#D5D5D5"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="联系电话"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_activity_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/app_color_white"
                        android:hint="请输入联系电话"
                        android:inputType="phone"
                        android:textColorHint="#D5D5D5"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开户行"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_activity_bank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/app_color_white"
                        android:hint="请输入开户行"
                        android:textColorHint="#D5D5D5"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line_activity_bank"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="账号"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_activity_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/app_color_white"
                        android:hint="请输入支付宝账号"
                        android:textColorHint="#D5D5D5"
                        android:inputType="textVisiblePassword"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="到账金额"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_activity_actualAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@color/app_color_white"
                        android:textColor="@color/app_front_black"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/app_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提示:提现会收取千分之六的手续费"
                        android:textColor="@color/app_cancle_gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_activity_poundage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/app_cancle_gray"
                        android:textSize="12dp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_activity_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="100dp"
                    android:paddingTop="20dp">

                    <RadioButton
                        android:id="@+id/rb_activity_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_radio_check"
                        android:drawablePadding="10dp"
                        android:text="支付宝"
                        android:textColor="@drawable/selector_withdraw"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/rb_activity_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_check"
                        android:drawablePadding="10dp"
                        android:text="银行卡"
                        android:textColor="@drawable/selector_withdraw"
                        android:textSize="15dp" />
                </RadioGroup>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_activity_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_wallet_sure"
            android:text="确定"
            android:textColor="@color/app_color_white"
            android:textSize="18dp" />
    </RelativeLayout>
</LinearLayout>