<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:anroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="8dp"
        android:layout_height="114dp">

        <com.puyue.www.qiaoge.RoundImageView
            android:id="@+id/iv_pic"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_baidu"
            android:layout_width="@dimen/size_97dp"
            android:layout_height="@dimen/size_97dp" />


        <TextView
            android:textColor="#333333"
            android:maxLines="1"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_below="@+id/rl_pic"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            tools:text="华清源腿排腿排华排..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:textColor="#FF34CE3A"
                android:maxLines="1"
                android:id="@+id/tv_descs"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_26dp"
                android:ellipsize="end"
                android:textSize="@dimen/sp_12"
                android:text="满赠优惠券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="15.0"
                android:textColor="#ffffff"
                android:id="@+id/tv_price"
                android:textStyle="bold"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="@dimen/size_20dp"
                android:paddingLeft="@dimen/size_20dp"
                android:background="@drawable/shape_green_full"
                android:layout_marginTop="@dimen/size_7dp"
                android:textSize="@dimen/size_16dp"
                android:layout_below="@+id/tv_descs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_fit"
                android:layout_marginTop="@dimen/size_26dp"
                android:textColor="#FFFF6006"
                android:text="满1000"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_coupon"
                android:text="1000优惠券"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_10"
                android:background="@mipmap/icon_full_bg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_fit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <TextView
            android:visibility="gone"
            android:id="@+id/tv_full_desc"
            android:background="@drawable/shape_green_button"
            android:textColor="#F54022"
            android:padding="@dimen/size_2dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginRight="@dimen/size_15dp"
            android:ellipsize="end"
            android:textSize="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_below="@+id/tv_name"
            tools:text="满200元赠送10元优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:text="15.0"
            android:visibility="gone"
            android:layout_toRightOf="@+id/iv_pic"
            android:textColor="#969696"
            android:id="@+id/tv_old_price"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/size_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_desc"
            android:visibility="gone"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_35dp"
            android:layout_below="@+id/tv_name"
            android:textColor="#FF5000"
            android:textSize="@dimen/sp_14"
            android:text="价格授权后可见"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_add"
            android:visibility="gone"
            android:src="@mipmap/icon_skill"
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>