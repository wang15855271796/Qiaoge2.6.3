<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_gray_line"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="15dp"
        android:text="是否发起线上会话"
        android:textColor="@color/app_front_black"
        android:textSize="18dp" />

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:textSize="@dimen/size_13dp"
            android:text="客服电话："
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_phone"
            android:textStyle="bold"
            android:textColor="#0A78FB"
            android:layout_toRightOf="@+id/tv"
            tools:text="0571-87758340"
            android:textSize="@dimen/size_13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/tv"
        android:layout_marginTop="@dimen/size_3dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:textSize="@dimen/size_13dp"
            android:text="电话客服在线时间："
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textColor="#0A78FB"
            android:layout_toRightOf="@+id/tv1"
            android:text="8:00-22:00"
            android:textSize="@dimen/size_13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_dialog_call_phone_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/app_front_black"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_size"
        android:background="@color/app_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_call_phone_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="14dp" />

        <View
            android:layout_width="@dimen/app_line_size"
            android:layout_height="match_parent"
            android:background="@color/app_line_gray" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_dialog_call_phone_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="确认"
            android:textColor="#333333"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>