<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:id="@+id/ll_team"
    android:background="@drawable/app_item_shadow"
    android:layout_marginTop="2dp"
    android:layout_marginRight="1dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="130dp"
            android:layout_height="wrap_content">



        <ImageView
            android:src="@mipmap/ic_add"
            android:id="@+id/iv_item_goods_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/white_bg"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_toRightOf="@id/ll"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/app_black"
            android:textSize="@dimen/size_15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ll"
            android:text="ï¿¥"
            android:textColor="@color/color_F6551A"
            android:textSize="@dimen/size_10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ll"
            android:textColor="@color/color_F6551A"
            android:textSize="@dimen/size_15dp" />

        <ImageView
            android:id="@+id/addCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:src="@mipmap/ic_add_buy" />
    </RelativeLayout>


</LinearLayout>