<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_item_goods_img"
            android:layout_width="88dp"
            android:src="@mipmap/ic_add"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/app_name"
                android:layout_marginTop="@dimen/size_15dp"
                android:id="@+id/tv_item_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_60dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/app_front_black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/tv_item_goods_specification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:textColor="@color/app_cancle_gray"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_item_goods_type"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/app_cancle_gray"
                    android:textSize="10dp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/tv_item_goods_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/app_cancle_gray"
                    android:textSize="10dp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/tv_item_goods_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_cancle_gray"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_size"
        android:layout_marginTop="10dp"
        android:background="@color/app_line_gray" />


</LinearLayout>