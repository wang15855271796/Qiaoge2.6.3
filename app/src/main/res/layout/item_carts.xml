<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_delete"
            android:background="@drawable/app_car"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="150dp">

            <TextView
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/cart_item_good_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <CheckBox
                    android:id="@+id/cb_item_out"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:background="@drawable/app_equipment_all_select"
                    android:button="@null" />


                <ImageView
                    android:id="@+id/iv_head"
                    android:src="@mipmap/ic_launcher"
                    android:layout_toRightOf="@+id/cb_item_cart"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_title"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:layout_marginRight="@dimen/sp_12"
                    android:text="【妙可蓝多】精致马苏里里苏里里苏奶马苏里奶"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_full_desc"
                android:textColor="#FF0025"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingTop="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_13dp"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="@dimen/size_9dp"
                android:background="@drawable/shape_cart_orange"
                android:layout_marginLeft="@dimen/size_44dp"
                tools:text="该商品再买600元可获赠5元优惠券"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--满赠商品赠品-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_given"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!--普通商品赠品-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_givens"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_full"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rv_given"-->
            <!--android:layout_marginLeft="@dimen/size_44dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

        <!--</android.support.v7.widget.RecyclerView>-->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/cart_item_bg"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="删除"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" />

</LinearLayout>