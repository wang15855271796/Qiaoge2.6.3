<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@drawable/app_home_adapter_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingBottom="@dimen/size_5dp"
        android:paddingRight="@dimen/size_15dp"
        android:paddingLeft="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/size_5dp"
            android:src="@mipmap/ic_buy_car_fill"
            android:id="@+id/iv_home_group"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_below="@+id/iv_home_group"
            android:text="标题"
            android:id="@+id/tv_home_group_content"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#232131"
            android:textSize="12dp" />
        <TextView
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_below="@+id/tv_home_group_content"
            android:text="月销110"
            android:id="@+id/tv_home_group_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/app_black"
            android:textSize="10dp" />

        <TextView
            android:layout_below="@+id/tv_home_group_volume"
            android:text="价格"
            android:id="@+id/tv_home_group_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:textColor="#f54022"
            android:textSize="12dp" />


    </RelativeLayout>


</LinearLayout>