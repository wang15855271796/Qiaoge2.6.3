<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10"
android:id="@+id/ll_classify"
    android:orientation="vertical">


<RelativeLayout
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:id="@+id/tvSelectionTitle"
        android:layout_marginTop="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/size_20dp"
        android:padding="@dimen/size_5dp"
        android:textColor="@color/app_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="精选分类" />

    <TextView

        android:id="@+id/tvSelectionContent"
        android:layout_marginLeft="@dimen/size_5dp"

        android:textColor="@color/app_black"
        android:textSize="@dimen/size_13dp"
        android:layout_below="@id/tvSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selection Classification" />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/app_line_gray"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/imselectionOne_outside"
        android:layout_marginRight="@dimen/imselectionOne_outside"
        android:layout_marginTop="@dimen/imselectionOne_outside">

        <ImageView
            android:id="@+id/imSelectionOne"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="180dp"
            android:layout_height="148dp"

            android:scaleType="fitXY"
           />

        <ImageView
            android:id="@+id/imSelectionTwo"
            android:layout_width="180dp"
            android:layout_height="148dp"

            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="@dimen/imselectionOne_outside"
        android:layout_marginRight="@dimen/imselectionOne_outside"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/imselectionOne_outBottomside"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
       >


        <ImageView
            android:id="@+id/imSelectionThree"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"

            android:layout_height="134dp"
            android:scaleType="fitXY"
           />

        <ImageView
            android:id="@+id/imSelectionFour"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"

            android:layout_height="134dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/imSelectionFive"
            android:layout_marginRight="@dimen/imselectionOne_inside"
            android:layout_width="85dp"

            android:layout_height="134dp"
            android:scaleType="fitXY"
           />

        <ImageView
            android:id="@+id/imSelectionSix"

            android:layout_width="85dp"
            android:layout_height="134dp"
            android:scaleType="fitXY"
           />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/app_line_gray"
        android:layout_height="1dp"/>
</LinearLayout>