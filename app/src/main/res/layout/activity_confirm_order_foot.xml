<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F6F6F6"
        android:gravity="center"
        android:padding="@dimen/size_15dp"
        android:text="@string/app_name"
        android:textColor="@color/color_939393"
        android:textSize="@dimen/size_11dp" />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeLayoutVIP"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:background="@drawable/app_confirm_im_bg"
        android:padding="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewVipTitle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:text="开通会员本单立减4元"
            android:textSize="@dimen/size_16dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imVipButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:src="@mipmap/ic_go_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="@string/commodityAmount"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:id="@+id/commodityAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:gravity="right"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="@string/distributionFee"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:id="@+id/distributionFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/color_939393"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:id="@+id/distributionFeePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:gravity="right"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/vipSubtractionLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="@string/vipSubtraction"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:visibility="gone"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:background="@drawable/app_vipsubtraction_bg"
                android:id="@+id/vipSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/color_DA673D"
                android:textSize="@dimen/size_13dp" />

            <TextView

                android:id="@+id/vipSubtractionPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:gravity="right"
                android:textColor="@color/color_F6551A"
                android:textSize="@dimen/size_11dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subtractionActivitiesLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="@string/vipSubtractionActivity"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:visibility="gone"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:background="@drawable/app_vipsubtraction_bg"
                android:id="@+id/subtractionActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/color_DA673D"
                android:textSize="@dimen/size_13dp" />

            <TextView
                android:id="@+id/subtractionActivitiesPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:gravity="right"
                android:textColor="@color/color_F6551A"
                android:textSize="@dimen/size_11dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutCoupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="@string/textCoupons"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:id="@+id/textCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:drawablePadding="@dimen/size_11dp"

                android:gravity="right"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/couponsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <TextView
            android:text="暂无优惠劵"
            android:id="@+id/noData"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <View
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:background="@color/color_F6F6F6"
            android:layout_height="@dimen/size_1dp"/>
        <RelativeLayout
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commodity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/payMoney"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_toLeftOf="@+id/payMoney"
                android:text="共1件商品 小计"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:id="@+id/payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15dp"
                android:textColor="@color/color_F6551A"
                android:textSize="@dimen/size_22dp" />
        </RelativeLayout>

        <EditText

            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_70dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@drawable/app_my_wallet_bg"
            android:paddingBottom="@dimen/size_5dp"
            android:gravity="left"
            android:hint="@string/editTextHint"
            android:padding="@dimen/size_5dp"
            android:textColor="@color/app_black"
            android:textColorHint="@color/color_979797"
            android:textSize="@dimen/size_11dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_collect_bills"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayout"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFFFF3C1"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vip_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="2dp"
                android:paddingBottom="12dp"
                android:text="开通会员本单立减"
                android:textColor="#FF666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_amount_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFF6551A"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/tv_tv_vip_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="，随后享受单单满减优惠"
                android:textColor="#FF666666"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/ll_go_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去开通"
                android:textColor="#FFF6551A"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/qg_cart_jump" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>