<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_group"
    android:layout_width="match_parent"

    android:layout_height="182dp">

    <FrameLayout
        android:id="@+id/ll_iv"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_margin="6dp"
        android:background="@drawable/iv_bg_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_seckill_img"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@color/white"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvMonthlySale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:background="@drawable/sale_bg"
            android:padding="3dp"
            android:text="越小：88888"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv"
        android:layout_alignLeft="@id/ll_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="哦啊好你啊"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="6dp"
        android:text="规格"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_666666"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tvHomePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_spec"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="￥452"
        android:textColor="@color/app_black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOriginalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvHomePrice"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/tvHomePrice"
        android:text="/双人位"
        android:textColor="@color/color_666666"
        android:textSize="9dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/shoppingCart"
        android:layout_width="@dimen/size_45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHomePrice"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:src="@mipmap/icon_miaoshagouwuche" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/shoppingCart"
        android:background="@color/app_line_gray" />


</RelativeLayout>