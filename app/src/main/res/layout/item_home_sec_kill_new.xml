<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_group"
    android:layout_width="130dp"

    android:layout_height="match_parent">

    <FrameLayout

        android:id="@+id/ll_iv"
        android:layout_width="123dp"
        android:layout_height="123dp"

        android:layout_margin="4dp"

        android:background="@drawable/iv_bg_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:background="@color/white"
            android:id="@+id/iv_home_seckill_img"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvMonthlySale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sale_bg"

            android:padding="3dp"
            android:text="越小：88888"
            android:textColor="@color/white"
            android:textSize="8sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv"
        android:layout_alignLeft="@id/ll_iv"
        android:ellipsize="end"

        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:minLines="2"
        android:text="哦啊好你啊"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/tvHomePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_alignLeft="@id/tvMonthlySale"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="￥452"
        android:textColor="@color/app_black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSpec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvHomePrice"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/tvHomePrice"
        android:text="/双人位"
        android:textColor="@color/color_666666"
        android:textSize="9dp" />

    <ImageView
        android:id="@+id/shoppingCart"
        android:layout_width="@dimen/size_45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHomePrice"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="1dp"
        android:src="@mipmap/icon_miaoshagouwuche" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/shoppingCart"
        android:background="@color/app_line_gray"
        android:visibility="gone" />


</RelativeLayout>